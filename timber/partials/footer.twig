{# Site footer #}
<footer class="bg-blue text-white">
	<div
		class="container py-12">

		{# Main footer content #}
		<div
			class="flex flex-col lg:flex-row gap-12 items-start">

			{# Logo & Hours #}
			<div
				class="shrink-0 flex flex-col xl:flex-row xl:items-start gap-6 xl:gap-12">
				{# Logo #}
				<a href="{{ site.url }}">
					{% include 'components/logo.twig' with { class: 'h-20 w-auto text-orange' } %}
				</a>

				{# Hours #}
				<div class="flex flex-col gap-4 text-sm">
					<p>{{ options.footer_hours_weekdays|default('Tuesday - Saturday 12:00pm - 23:00pm') }}</p>
					<p class="underline">{{ options.footer_hours_closed|default('Closed on Sunday') }}</p>
				</div>
			</div>

			{# Menu Links #}
			<nav class="grow">
				{{ menu_footer|raw }}
			</nav>

			{# Social Media #}
			<div class="shrink-0 lg:text-right">
				<h3 class="text-orange mb-4">Connect With Us</h3>
				<div class="flex items-center gap-6 lg:justify-end">
					<a href="{{ options.footer_facebook|default('https://facebook.com') }}" target="_blank" rel="noopener" class="text-orange hover:text-white transition-colors" aria-label="Facebook">
						<svg width="17" height="32" viewbox="0 0 17 32" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M15.6234 17.5078H11.064V31.125H4.98494V17.5078H7.62939e-05V11.915H4.98494V7.59888C4.98494 2.7356 7.90291 0 12.3407 0C14.4683 0 16.7176 0.425537 16.7176 0.425537V5.22803H14.2252C11.7935 5.22803 11.064 6.68701 11.064 8.26758V11.915H16.4744L15.6234 17.5078Z" fill="currentColor"/>
						</svg>
					</a>
					<a href="{{ options.footer_instagram|default('https://instagram.com') }}" target="_blank" rel="noopener" class="text-orange hover:text-white transition-colors" aria-label="Instagram">
