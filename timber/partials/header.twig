{# Site header #}
{% set menuClasses = 'fixed lg:static inset-0 lg:inset-auto bg-orange lg:bg-transparent -translate-x-full lg:translate-x-0 transition-transform lg:transition-none duration-300 ease-in-out z-40 flex items-center justify-center lg:justify-start' %}

<header class="absolute top-0 left-0 right-0 z-50 bg-transparent">
	<nav class="container py-8 lg:py-12">
		<div
			class="flex items-center justify-between">
			{# Logo #}
			<a class="z-50" href="{{ site.url }}">
				{% include 'components/logo.twig' with { class: 'h-18 lg:h-30 w-auto text-blue' } %}
			</a>

			{# Menu: visible en desktop, overlay en mobile #}
			<div data-menu id="mobile-menu" class="{{ menuClasses }}">
				{{ menu_primary|raw }}
			</div>

			{# Mobile menu toggle button #}
			<button data-menu-toggle class="lg:hidden p-2 text-blue z-50" aria-label="Toggle menu" aria-expanded="false" aria-controls="mobile-menu">
				<svg data-icon="hamburger" class="w-8 h-8" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
				</svg>
				<svg data-icon="close" class="w-8 h-8 hidden" fill="none" stroke="currentColor" viewbox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
				</svg>
			</button>
		</div>
	</nav>
</header>
