								</svg>
							</div>
							<div>
								<h3 class="text-orange font-bold text-sm uppercase mb-1">For order</h3>
								<a href="tel:{{ fields.phone }}" class="text-blue font-bold text-lg hover:text-orange transition-colors">
									{{ fields.phone }}
								</a>
							</div>
						</div>
					{% endif %}

					{# Email #}
					{% if fields.email %}
						<div class="flex items-start gap-4">
							<div class="bg-orange w-12 h-12 rounded-full flex items-center justify-center shrink-0">
								<svg class="w-6 h-6 text-blue" viewbox="0 0 29 25" fill="none">
