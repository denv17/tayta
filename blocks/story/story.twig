{# Story Block #}
<section id="our-story" class="relative bg-blue">
	<div class="container">
		<div
			class="grid lg:grid-cols-2 gap-12 lg:gap-20">

			{# Chef Image with Decoration #}
			<div class="order-1 lg:order-0 flex items-end justify-center">
				{% if fields.image %}
					<img src="{{ fields.image.url }}" alt="{{ fields.image.alt }}" class="max-w-160 w-full h-auto">
				{% endif %}
			</div>

			{# Content #}
			<div
				class="flex flex-col gap-6 pt-40 lg:pb-40">
				{# Title #}
				<h2 class="text-orange font-heading font-black text-4xl lg:text-6xl uppercase">
					{{ fields.title|default('Our Story') }}
				</h2>

				{# Description #}
				<div class="text-white space-y-4 text-base lg:text-lg leading-relaxed">
					{{ fields.description|raw }}
				</div>
			</div>
		</div>
	</section>
