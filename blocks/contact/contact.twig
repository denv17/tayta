{# Contact Block #}
<section id="contact-us" class="bg-cream py-20 relative" style="background-image: url('{{ site.theme.link }}/src/images/patterns/contact-pattern.png'); background-repeat: repeat; background-size: auto;">
	<div class="container">

		<div
			class="max-w-6xl mx-auto">

			{# Title #}
			<div class="mb-12">
				<span class="text-orange font-bold text-lg lg:text-xl uppercase">
					{{ fields.subtitle|default('Connect') }}
				</span>
				<h2 class="text-blue font-heading font-black text-4xl lg:text-6xl uppercase mt-4">
					{{ fields.title|default('Get In Touch') }}
				</h2>
			</div>

			<div
				class="grid lg:grid-cols-2 gap-12">
				{# Contact Info #}
				<div
					class="space-y-8">

					{# Phone #}
					{% if fields.phone %}
						<div class="flex items-start gap-4">
							<div class="bg-orange w-12 h-12 rounded-full flex items-center justify-center shrink-0">
